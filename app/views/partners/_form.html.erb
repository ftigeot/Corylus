<div class="col_container">

<div class="col_left">
<p><label for="partner_name">Nom</label><br/>
<%= text_field 'partner', 'name' %></p>
<p><label for="partner_long_name">Nom usuel</label><br/>
<%= text_field 'partner', 'long_name' %></p>
<p><label for="partner_is_individual">Particulier ?</label> 
<%= check_box 'partner', 'is_individual' %></p>

<p>
<label for="partner_is_customer">Client ?</label> 
<%= check_box 'partner', 'is_customer' %>
<label for="partner_is_supplier">Fournisseur ?</label> 
<%= check_box 'partner', 'is_supplier' %></p>

<p><label for="partner_origin">Origine</label> 
<%= text_field 'partner', 'origin', :size => 24 %></p>

<table>
<tr><td><label for="partner_phone">Téléphone</label></td>
<td><%= text_field 'partner', 'phone' %></td></tr>

<tr><td><label for="partner_fax">Fax</label></td>
<td><%= text_field 'partner', 'fax' %></td></tr>

<tr><td><label for="partner_web">Web</label></td>
<td><%= text_field 'partner', 'web' %></td></tr>

<tr>
<td><label for="partner_country_id">Pays</label></td>
<td>
<select id="partner_country_id" name="partner[country_id]">
	<% countries = Country.find :all %>
	<%= options_from_collection_for_select(countries, 'id', 'name',
		@partner.country_id) %>
</select>
</td>
</tr>

<tr><td><label for="partner_created_on">Créé le</label></td>
<td><%= date_select 'partner', 'created_on'  %></td></tr>

<tr><td><label for="partner_updated_on">Mis à jour le</label></td>
<td><%= date_select 'partner', 'updated_on'  %></td></tr>
</table>

<p><label for="partner_comment">Commentaire</label><br/>
<%= text_area 'partner', 'comment', :rows => 12, :cols => 75 %></p>
</div>

<div class="col_right">
<p><b>Délai de paiement</b><br/>
<%= text_field 'partner', 'payment_delay' %></p>
</div>

<div class="col_footer">&nbsp;</div>
</div>

<p><%= link_to 'Suppression', { :action => 'destroy', :id => @partner.id},
	:confirm => 'En êtes-vous sur ?' %></p>

